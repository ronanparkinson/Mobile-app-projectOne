<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sub_Favorites$Sub_Drinks">




    <TextView
        android:id="@+id/drititle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:background="?android:attr/colorFocusedHighlight"
        android:gravity="center"
        android:text="Buy a Drink!"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Americano"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="100sp"
            android:gravity="center"
            android:text="Americano"
            android:textSize="10dp"
            android:onClick="AmericanoClick"/>


        <Button
            android:id="@+id/Espresso"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="100sp"
            android:gravity="center"
            android:text="Espresso"
            android:textSize="10dp"
            android:onClick="EspressoClick"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/poptitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginRight="30sp"
        android:layout_marginLeft="30sp"
        android:background="?android:attr/colorFocusedHighlight"
        android:gravity="center"
        android:text="Most popular drink today!"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/AmericanoText"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="120dp"
        android:background="?android:attr/colorFocusedHighlight"
        android:gravity="center"
        android:text="Americano\n-Single shot of coffee\n-Hot water"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/EspressoText"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="120dp"
        android:background="?android:attr/colorFocusedHighlight"
        android:gravity="center"
        android:text="Espresso\n This is a single shot of coffee"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/FlatWhiteText"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="120dp"
        android:background="?android:attr/colorFocusedHighlight"
        android:gravity="center"
        android:text="Flat White\n-Two shots of coffee\n-Foamed milk"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/LatteText"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="140dp"
        android:background="?android:attr/colorFocusedHighlight"
        android:gravity="center"
        android:text="Latte\n-Two shots of coffee\n-Steamed milk\n-Foam on top"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/CappuccinoText"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_gravity="center"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="120dp"
        android:background="?android:attr/colorFocusedHighlight"
        android:gravity="center"
        android:text="Cappuccino\n-Single shot of coffee\n-Foam on top"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Cappuccino"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="100sp"
            android:gravity="center"
            android:text="Cappuccino"
            android:textSize="10dp"
            android:onClick="CappuccinoClick"
            />


        <Button
            android:id="@+id/BlackTea"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="100sp"
            android:gravity="center"
            android:text=" Black Tea"
            android:textSize="10dp"
            android:onClick="TeaClick"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/FlatWhite"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="150sp"
            android:gravity="center"
            android:text="Flat White"
            android:textSize="10dp"
            android:onClick="FlatClick"
            />

        <Button
            android:id="@+id/Latte"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="150sp"
            android:gravity="center"
            android:text="Latte"
            android:textSize="10dp"
            android:onClick="LatteClick"
            />
    </LinearLayout>
</FrameLayout>
    </ScrollView>
